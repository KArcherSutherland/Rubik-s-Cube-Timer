<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.vcu.quickgen" >

    <application
        android:name=".QuickApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.TutorialActivity"
            android:label="@string/title_activity_tutorial" >
        </activity>
        <activity
            android:name=".activities.TimerActivity"
            android:label="@string/title_activity_timer" >
        </activity>
        <activity
            android:name=".activities.SolverActivity"
            android:label="@string/title_activity_solver" >
        </activity>
        <activity
            android:name=".activities.NotationGuideActivity"
            android:label="@string/title_activity_guide" >
        </activity>
        <activity
            android:name=".activities.StatisticsActivity"
            android:label="@string/title_activity_statistics" >
        </activity>
        <activity
            android:name=".activities.TypeGuideActivity"
            android:label="@string/title_activity_type_guide" >
        </activity>
        <activity
            android:name=".activities.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name=".activities.TypeSelectorActivity"
            android:label="@string/title_activity_type_selector"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
    </application>

</manifest>
